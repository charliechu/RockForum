<%= render :partial => "common/user_nav" %>

<% if user_signed_in? %>
    <%= form_for @post, :url => board_post_path(@board, @post), :html => {:method => :put, :multipart => true} do |f| %>
        <p>
            <%= f.label :subject, "Subject:" %>
            <%= f.text_field :subject %>
        </p>
            <%= f.label :content, "Content:" %>
        <p>
            <%= f.text_area :content %>
        </p>
        <p>
            <%= f.file_field :photo %>
        </p>
        <%= f.submit "Update" %>
    <% end %>
<% end %>